<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/words_to_memorize_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rainbow_line_2">


    <TextView
        android:id="@+id/words_to_memorize_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Instructions"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#013220"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/words_to_memorize_search_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/words_to_memorize_search_box"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/click_here_finger_words_to_memorize"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/words_to_memorize_textView"
        app:layout_constraintStart_toEndOf="@+id/words_to_memorize_textView"
        app:layout_constraintTop_toTopOf="@+id/words_to_memorize_textView"
        app:srcCompat="@drawable/click_here_finger_with_text" />

    <EditText
        android:id="@+id/words_to_memorize_search_box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="@string/Search_text_here"
        app:layout_constraintBottom_toTopOf="@+id/my_vocabulary_listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/words_to_memorize_textView" />


    <ListView
        android:id="@+id/my_vocabulary_listview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/clear_my_vocabulary_list_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/words_to_memorize_search_box"
        app:layout_constraintTop_toBottomOf="@+id/words_to_memorize_search_box" />


    <Button
        android:id="@+id/clear_my_vocabulary_list_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@color/red"
        android:text="@string/Clear_my_vocabulary_list_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_vocabulary_listview" />

