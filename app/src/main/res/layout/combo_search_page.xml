<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/combo_search_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/combo_search_webView_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/combo_search_webView_1_progressBar_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/combo_search_webView_1_progressBar_1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="50"
        android:minHeight="5dp"
        app:layout_constraintBottom_toTopOf="@+id/combo_search_webView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combo_search_webView_1" />

    <WebView
        android:id="@+id/combo_search_webView_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/combo_search_webView_2_progressBar_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combo_search_webView_1_progressBar_1" />

    <ProgressBar
        android:id="@+id/combo_search_webView_2_progressBar_2"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:indeterminate="false"
        android:max="50"
        android:minHeight="5dp"
        app:layout_constraintBottom_toTopOf="@+id/combo_search_webView_3_progressBar_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combo_search_webView_2" />

    <WebView
        android:id="@+id/combo_search_webView_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/combo_search_webView_2_progressBar_2">

    </WebView>

    <ProgressBar
        android:id="@+id/combo_search_webView_3_progressBar_3"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="50"
        android:minHeight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combo_search_webView_3" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_for_webView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/maximize_browser_icon"
        app:backgroundTint="@color/spring_green"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/combo_search_webView_1_progressBar_1"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/chartreuse" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_for_webView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/maximize_browser_icon"
        app:backgroundTint="@color/light_yellow"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/combo_search_webView_2_progressBar_2"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/chartreuse" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_for_webView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/maximize_browser_icon"
        app:backgroundTint="@color/design_default_color_primary"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/combo_search_webView_3_progressBar_3"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/chartreuse" />


</androidx.constraintlayout.widget.ConstraintLayout>
